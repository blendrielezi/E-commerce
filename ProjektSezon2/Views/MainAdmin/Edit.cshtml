@model ProjektSezon2.Controllers.EditUserViewModel
@{
    ViewData["Title"] = "Edit User Roles";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-controller="MainAdmin" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="SelectedRole" class="form-label">Select Role</label>
        <select asp-for="SelectedRole" class="form-select">
            <option value="">-- none --</option>
            @foreach (var r in Model.AvailableRoles)
            {
                if (r == Model.SelectedRole)
                {
                    <option value="@r" selected>@r</option>
                }
                else
                {
                    <option value="@r">@r</option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="MainAdmin" class="btn btn-secondary ms-2">Cancel</a>
</form>
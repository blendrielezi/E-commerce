@model ProjektSezon2.Models.ApplicationUser
@{
    ViewData["Title"] = "Edito Përdoruesin";
}

<h2>Edito Përdoruesin</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    

    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label>Fjalëkalimi i ri (opsional)</label>
        <input type="password" name="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Ruaj</button>
    <a asp-action="Index" class="btn btn-secondary">Anulo</a>
</form>




@using Microsoft.AspNetCore.Identity
@model IEnumerable<ProjektSezon2.Models.ApplicationUser>



@{
    ViewData["Title"] = "Përdoruesit";
}

<h2>Përdoruesit</h2>

<a href="@Url.Action("Create", "CrudUser")" class="btn btn-primary mb-3">Krijo Përdorues të Ri</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Emri i Përdoruesit</th>
            <th>Email</th>
            <th>Veprime</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "CrudUser", new { id = user.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "CrudUser", new { id = user.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Jeni të sigurt që dëshironi të fshini këtë përdorues?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
